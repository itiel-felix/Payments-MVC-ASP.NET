@model PaymentViewModel
<div class="row mb-4">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="flex-row">
                    <div class="row">
                        <div class="col-md-4">
                            <h5 class="card-title">Title:</h5>
                        </div>
                        <div class="col-md-8">
                            <h5 class="card-title">@Model.Title</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text">Description:</p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">@Model.Description</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text">Total:</p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">$ @Model.Total</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <form method="post" action="@Url.Action("Delete", "Payment", new { id = Model.ID })">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                        <div class="col-md-8">
                            <form method="get" action="@Url.Action("Update", "Payment", new { id = Model.ID })">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>